package com.optum.ftps.ob.core.employer.details.dto;

import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

class StatusMessageTypeTest {

    @Test
    void testConstructorAndGetters() {
        // Arrange
        String statusCode = "200";
        String severity = "INFO";
        String statusDescription = "Success";

        // Act
        StatusMessageType statusMessageType = new StatusMessageType(statusCode, severity, statusDescription);

        // Assert
        assertEquals(statusCode, statusMessageType.getStatusCode());
        assertEquals(severity, statusMessageType.getSeverity());
        assertEquals(statusDescription, statusMessageType.getStatusDescription());
    }

    @Test
    void testBuilder() {
        // Arrange
        String statusCode = "404";
        String severity = "ERROR";
        String statusDescription = "Not Found";

        // Act
        StatusMessageType statusMessageType = StatusMessageType.builder()
                .statusCode(statusCode)
                .severity(severity)
                .statusDescription(statusDescription)
                .build();

        // Assert
        assertEquals(statusCode, statusMessageType.getStatusCode());
        assertEquals(severity, statusMessageType.getSeverity());
        assertEquals(statusDescription, statusMessageType.getStatusDescription());
    }

    @Test
    void testToString() {
        // Arrange
        String statusCode = "500";
        String severity = "FATAL";
        String statusDescription = "Internal Server Error";
        StatusMessageType statusMessageType = new StatusMessageType(statusCode, severity, statusDescription);

        // Act
        String toStringResult = statusMessageType.toString();

        // Assert
        assertTrue(toStringResult.contains(statusCode));
        assertTrue(toStringResult.contains(severity));
        assertTrue(toStringResult.contains(statusDescription));
    }
}
