private boolean isValidLength(String field, int maxLength, String fieldName) {
    if (field == null) {
        log.error("{} is null", fieldName);
        return false;
    }
    String trimmedField = field.trim();
    if (trimmedField.length() > maxLength) {
        log.error("{} exceeds max length {}: {}", fieldName, maxLength, trimmedField);
        return false;
    }
    return true;
}
