 @Test
    void testValidateEmployerBankDetails_nullFields() {
        UpdateEmpBankDetailsRequest request = new UpdateEmpBankDetailsRequest();
        request.setRequestId(null); // ✅ Null requestId
        request.setRequestUserId(null); // ✅ Null requestUserId
        request.setSourceSystemId(null); // ✅ Null sourceSystemId
        request.setEmployerBankDetail(null); // ✅ Null employer details (causes NPE in some cases)

        try {
            Set<Integer> errors = validator.validateEmployerBankDetails(request);
            assertFalse(errors.isEmpty(), "Expected validation errors for null fields.");
        } catch (NullPointerException e) {
            fail("Test failed due to NullPointerException. Ensure validator handles null fields.");
        }
    }
